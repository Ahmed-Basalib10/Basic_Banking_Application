<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.UserAccountActivity"
    android:background="#E3E0E0">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/usericon"
        app:layout_constraintBottom_toTopOf="@+id/linearl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <TextView
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account Info"
            android:textStyle="bold" />

        <Space
            android:layout_width="15dp"
            android:layout_height="15dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:clipToPadding="false"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="false"
            app:layout_collapseMode="parallax">

            <RelativeLayout
                android:id="@+id/layoutt1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="fill_horizontal|center"
                android:padding="10dp">


                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:gravity="fill_vertical"
                    android:text="Name: "
                    android:textColor="@color/black"
                    android:textSize="16.5sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nameUser"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignStart="@+id/name"
                    android:layout_marginStart="50dp"
                    android:layout_alignTop="@+id/name"
                    android:fontFamily="serif"
                    android:gravity="fill_vertical"
                    android:text="ahmed"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="42dp"
                android:gravity="fill_horizontal|center"
                android:padding="10dp">


                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:gravity="fill_vertical"
                    android:text="Mail ID: "
                    android:textColor="@color/black"
                    android:textSize="16.5sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/useremail"
                    android:layout_width="match_parent"
                    android:layout_alignTop="@+id/email"
                    android:layout_height="30dp"
                    android:layout_alignStart="@+id/email"
                    android:layout_marginStart="60dp"
                    android:fontFamily="serif"
                    android:gravity="fill_vertical"
                    android:text="ahmed@gmail.come"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="82dp"
                android:gravity="fill_horizontal|center"
                android:padding="10dp">


                <TextView
                    android:id="@+id/account"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:gravity="fill_vertical"
                    android:text="Acc No: "
                    android:textColor="@color/black"
                    android:textSize="16.5sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/useraccount"
                    android:layout_width="match_parent"
                    android:layout_alignTop="@+id/account"
                    android:layout_height="30dp"
                    android:layout_alignStart="@+id/account"
                    android:layout_marginStart="60dp"
                    android:fontFamily="serif"
                    android:gravity="fill_vertical"
                    android:text="xxxxxxxxxxx2727"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="122dp"
                android:gravity="fill_horizontal|center"
                android:padding="10dp">


                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:gravity="fill_vertical"
                    android:text="Mobile No: "
                    android:textColor="@color/black"
                    android:textSize="16.5sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/userphone"
                    android:layout_width="match_parent"
                    android:layout_alignTop="@+id/phone"
                    android:layout_height="30dp"
                    android:layout_alignStart="@+id/phone"
                    android:layout_marginStart="83dp"
                    android:fontFamily="serif"
                    android:gravity="fill_vertical"
                    android:text="6738883888"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="162dp"
                android:gravity="fill_horizontal|center"
                android:padding="10dp">


                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="8dp"
                    android:gravity="fill_vertical"
                    android:text="Balance: "
                    android:textColor="@color/black"
                    android:textSize="16.5sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/userbalance"
                    android:layout_width="match_parent"
                    android:layout_alignTop="@+id/balance"
                    android:layout_height="30dp"
                    android:layout_alignStart="@+id/balance"
                    android:layout_marginStart="67dp"
                    android:fontFamily="serif"
                    android:gravity="fill_vertical"
                    android:text="Rs.666666/-"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>